{
  "name": "ceus-media/mail",
  "license": [
    "GPL-3.0-or-later"
  ],
  "repositories": [
    {
      "type": "git",
      "url": "git@ceusmedia.gitlab.com:ceus-media/phan-viewer.git"
    }
  ],
  "authors": [
    {
      "name": "Christian WÃ¼rker",
      "email": "christian.wuerker@ceusmedia.de",
      "homepage": "https://ceusmedia.de/",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "christian.wuerker@ceusmedia.de",
    "jabber": "cwuerker@ceusmedia.de"
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^7.4 | ^8",
    "ext-dom": "*",
    "ext-fileinfo": "*",
    "ext-iconv": "*",
    "ext-imap": "*",
    "ext-json": "*",
    "ceus-media/common": "^0.9 | 0.9-dev",
    "ceus-media/cache": "^0.4 | dev-0.4-dev",
    "ezyang/htmlpurifier": "dev-master"
  },
  "require-dev": {
    "brianium/paratest": "*",
    "ceus-media/bootstrap": "^0.6 | 0.6.x-dev",
    "ceus-media/doc-creator": "*",
    "ceus-media/phan-viewer": "* | dev-master",
    "phan/phan": "^v5",
    "phpunit/phpunit": "*",
    "phpstan/phpstan": "*",
    "phpstan/phpstan-strict-rules": "*",
    "rector/rector": "*",
    "squizlabs/php_codesniffer": "*",
    "php-parallel-lint/php-parallel-lint": "^1.3 | dev-master"
  },
  "autoload": {
    "psr-4": {
      "CeusMedia\\Mail\\": ["src/"],
      "CeusMedia\\MailDemo\\": ["demo/"],
      "CeusMedia\\MailTest\\": ["test/"]
    }
  },
  "scripts": {
    "dev:install-quiet": "composer install --quiet",
    "dev:update-quiet": "composer update --quiet",
    "incomplete:dev:create-docs": [
      "@dev:install-quiet",
      "php vendor/ceus-media/doc-creator/doc-creator.php --config-file=util/doc.xml"
    ],
    "dev:phpunit-all": [
      "@dev:install-quiet",
      "XDEBUG_MODE=off php vendor/bin/phpunit --configuration util/phpunit.9.xml"
    ],
    "dev:phpunit-all-coverage": [
      "@dev:install-quiet",
      "XDEBUG_MODE=coverage php vendor/bin/phpunit --configuration util/phpunit.9.xml"
    ],
    "dev:phpunit-integration": [
      "@dev:install-quiet",
      "XDEBUG_MODE=off php vendor/bin/phpunit --configuration util/phpunit.9.xml --testsuite integration"
    ],
    "dev:phpunit-unit": [
      "@dev:install-quiet",
      "XDEBUG_MODE=on php vendor/bin/phpunit --configuration util/phpunit.9.xml --testsuite unit"
    ],
    "dev:phpstan": [
      "@dev:install-quiet",
      "XDEBUG_MODE=off vendor/bin/phpstan analyze --configuration=util/phpstan.neon --memory-limit=1G --xdebug --verbose"
    ],
    "dev:phpstan-clear": [
      "@dev:install-quiet",
      "XDEBUG_MODE=off vendor/bin/phpstan clear-result-cache --verbose"
    ],
    "dev:phpstan-save": [
      "@dev:instal-quietl",
      "XDEBUG_MODE=off vendor/bin/phpstan analyse --configuration util/phpstan.neon --generate-baseline util/phpstan-baseline.neon --verbose"
    ],
    "dev:rector": [
      "@dev:install-quiet",
      "vendor/bin/rector --config=util/rector.php --clear-cache --dry-run"
    ],
    "dev:rector-fix": [
      "@dev:install-quiet",
      "vendor/bin/rector --config=util/rector.php --clear-cache "
    ],
    "dev:test-syntax": [
      "@dev:install-quiet",
      "vendor/bin/parallel-lint . -j 10 --colors --exclude vendor"
    ],
    "dev:phan": [
      "@dev:install-quiet",
      "XDEBUG_MODE=off ./vendor/bin/phan -k=util/.phan --color --allow-polyfill-parser || true"
    ],
    "dev:phan-report": [
      "@dev:install-quiet",
      "@dev:phan-save",
      "php vendor/ceus-media/phan-viewer/phan-viewer generate --source=util/phan.json --target=doc/phan/"
    ],
    "dev:phan-save": [
      "@dev:install-quiet",
      "XDEBUG_MODE=off PHAN_DISABLE_XDEBUG_WARN=1 ./vendor/bin/phan -k=util/.phan -m=json -o=util/phan.json --allow-polyfill-parser -p || true"
    ]
  },
  "scripts-descriptions": {
    "dev:install": "Installs project dependencies for Development stage",
    "dev:update": "Updates project dependencies for Development stage",
    "dev:unit": "Run unit tests",
    "dev:phpstan": "Validate codebase with PHPStan",
    "dev:phpstan-clear": "Clear PHPStan cache",
    "dev:phpstan-save": "Store current results in ignore list",
    "dev:rector": "Shows suggestions of configured Rector rules",
    "dev:rector-fix": "Apply currently configured Rector rules to codebase",
    "dev:test-syntax": "Validate code base syntax using PHP linter"
  }
}
